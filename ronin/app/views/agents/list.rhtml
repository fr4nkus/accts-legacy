<h1>Listing agents</h1>

<table>
  <tr>
  <% for column in Agent.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for agent in @agents %>
  <tr>
  <% for column in Agent.content_columns %>
    <td><%=h agent.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => agent %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => agent %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => agent }, :confirm => 'Are you sure?', :post => true %></td>
  </tr>
<% end %>
</table>

<% will_paginate @accounts %>

